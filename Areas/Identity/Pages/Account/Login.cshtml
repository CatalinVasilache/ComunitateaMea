                        </label>
                    </div>
                </div>*@
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Autentificare</button>
                </div>
                <div class="form-group" style="font-size: 1rem;">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Ai uitat parola?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Inregistreaza-te ca utilizator nou</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Retrimite email-ul de confirmare</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
