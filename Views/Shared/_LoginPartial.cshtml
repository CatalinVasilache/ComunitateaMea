@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@using ComunitateaMea.Extensions

<ul class="navbar-nav" style="font-weight: bold; align-items: center">
    @if (SignInManager.IsSignedIn(User))
    {
    <li class="nav-item"  style="font-weight: bold; font-size: 18px;">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Contul meu</a>
    </li>
    <li class="nav-item">
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button style="font-weight: bold; margin-left: 20px; font-size: 18px;" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item" style="font-weight: bold; font-size: 18px;">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Inregistrare</a>
    </li>
    <li class="nav-item" style="font-weight: bold; font-size: 18px;">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li> 
}
</ul>